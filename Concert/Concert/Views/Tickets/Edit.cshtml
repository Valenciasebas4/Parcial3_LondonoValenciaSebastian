@model Parcial3_LondonoValenciaSebastian.DAL.Entities.Ticket

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Ticket</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="UseDate" class="control-label"></label>
                <input asp-for="UseDate" class="form-control" />
                <span asp-validation-for="UseDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsUsed" class="control-label"></label>
                <input asp-for="IsUsed" class="form-control" value="True" readonly />
                <span asp-validation-for="IsUsed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EntranceGate" class="control-label"></label>
                <select asp-for="EntranceGate" class="form-control">
                    <option value="Norte">Norte</option>
                    <option value="Sur">Sur</option>
                    <option val ue="Oriental">Oriental</option>
                    <option value="Occidental">Occidental</option>
                </select>
                <span asp-validation-for="EntranceGate" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-outline-primary" />
                <a asp-action="Index" class="btn btn-outline-success">Regresar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
