@model IEnumerable<Parcial3_LondonoValenciaSebastian.DAL.Entities.Ticket>

@{
    ViewData["Title"] = "Index";
}



<link rel="stylesheet" href="https://cdn.datatables.net/1.13.3/css/jquery.dataTables.min.css" />
<!--
<p>
    <a asp-action="Create">Create New</a>
</p>
-->
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Validar Boleta</h3>
            </div>
            <div class="panel-body">
                <form asp-action="ValidarBoleta" method="post">
                    <div class="form-group">
                        <label>ID de la boleta:</label>
                        <input type="text" name="boletaId" class="form-control" />
                    </div>
                    <br/>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Validar</button>
                    </div>
                </form>
                <br/>
                @if (TempData["boletaValida"] != null)
                {
                    <div class="alert alert-success">@TempData["boletaValida"]</div>
                }
                @if (TempData["boletaInvalida"] != null)
                {
                    <div class="alert alert-danger">@TempData["boletaInvalida"]</div>
                }
            </div>
        </div>
    </div>
</div>
<hr />

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Tickets</h3>
            </div>
            <div class="panel-body">
                <table class="table table-responsive table-striped" id="TicketTable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Id)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.UseDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.IsUsed)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.EntranceGate)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                @foreach (var item in Model) {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UseDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IsUsed)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EntranceGate)
                            </td>
                            <td>
                                    <!-- <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-success">Edit</a> -->
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info">Detalles</a>
                                    <!-- <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a> -->
                            </td>
                        </tr>
                }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="//cdn.datatables.net/1.13.3/js/jquery.dataTables.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#TicketTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Spanish.json"
                },
                "aLengthMenu": [
                    [5, 25, 50, 100, 200, -1],
                    [5, 25, 50, 100, 200, "Todos"]
                ]
            });
        });
    </script>
}
